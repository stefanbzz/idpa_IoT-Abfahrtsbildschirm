@using System.Collections.Generic
@using idpa_IoT_Abfahrtsbildschirm.Models
@model IEnumerable<Connection>

@if (Model != null)
{
    <div class="maincontent">
        <div class="clock">
            <div class="clock-face clock-component">
                <div id="hrMarkers" class="hr-markers">
                </div>
                <div id="minMarkers" class="min-markers">
                </div>
            </div>
            <div class="clock-hands clock-component">
                <div id="hr-hand" class="hand hr-hand"></div>
                <div id="min-hand" class="hand min-hand"></div>
                <div id="sec-hand" class="hand sec-hand">
                    <div class="sec-hand-ball"></div>
                </div>
            </div>
            <div class="pin clock-component"></div>
        </div>
    <h1>@ViewBag.Stop</h1>
    <table id="connections-table">
        <thead>
            <tr>
                <th></th>
                <th>Linie</th>
                <th>Ziel</th>
                <th>Kante/Perron</th>
                <th>Abfahrt</th>
                <th>Hinweis</th>
            </tr>
        </thead>
        <tbody id="connections-tbody">
            @foreach (var connection in Model)
            {
                <tr>
                    @switch (connection.Type)
                    {
                        case "night_bus":
                        case "bus":
                            <td><img src="img/Bus_r.svg" height="90" width="90" /></td>
                            break;
                        case "express_train":
                        case "night_strain":
                        case "strain":
                            <td><img src="img/Zug.svg" height="90" width="90"/></td>
                            break;
                        case "tram":
                            <td><img src="img/Tram.svg" height="90" width="90" /></td>
                            break;
                        case "ship":
                            <td><img src="img/Schiff.svg" height="90" width="90" /></td>
                            break;
                        default:
                            <td></td>
                            break;
                    }
                    <td>@connection.Line</td>
                    <td>@connection.Terminal.Name</td>
                    <td>@connection.Track</td>
                    <td>@connection.Time.ToString("HH:mm")</td>
                    @if(connection.Dep_Delay == "+0" || connection.Dep_Delay == null)
                    {
                        <td></td>
                    }
                    else
                    {
                        <td>@connection.Dep_Delay'</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p> Keine Verbindungen gefunden.<br> Um neue Verbindungen anzuzeigen, drücken Sie "ctrl + B".</p>
}
